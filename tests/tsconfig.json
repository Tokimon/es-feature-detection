{
  "compilerOptions": {
    "module": "es6",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "target": "es2017",
    "lib": ["es5", "es6", "dom"],
    "moduleResolution": "node",
    "allowJs": false,
    "checkJs": false,
    "outDir": "."
  },

  "include": [
    "../builtins/*.ts",
    "../syntax/*.ts",
    "../utils/*.ts"
  ],

  "exclude": [
    "node_modules",
    "../test/**/*.ts"
  ]
}
